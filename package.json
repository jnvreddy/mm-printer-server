{
  "name": "mm-printer-server",
  "version": "1.0.0",
  "description": "Magic Moments Printer Server",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.magicmoments.printerserver",
    "productName": "Magic Moments Printer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{test,__tests__,examples}/**",
      "!node_modules/.cache",
      "!**/*.md",
      "!src",
      "!tests",
      "!*.log",
      "!.git"
    ],
    "extraResources": [
      {
        "from": "cloudflared.exe",
        "to": "cloudflared.exe"
      },
      {
        "from": "config",
        "to": "config"
      },
      {
        "from": "secrets",
        "to": "secrets"
      }
    ],
    "asarUnpack": [
      "**/cloudflared.exe",
      "**/config/**",
      "**/secrets/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/MMj.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Magic Moments Printer"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jnvreddy/mm-printer-server"
  },
  "keywords": [
    "electron",
    "print",
    "server",
    "photo-booth"
  ],
  "author": "J Nagavardhan Reddy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jnvreddy/mm-printer-server/issues"
  },
  "homepage": "https://github.com/jnvreddy/mm-printer-server#readme",
  "dependencies": {
    "axios": "^1.9.0",
    "child_process": "^1.0.2",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "sharp": "^0.33.2",
    "uuid": "^11.1.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12"
  }
}
